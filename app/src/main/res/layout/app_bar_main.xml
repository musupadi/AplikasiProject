<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:clipToPadding="false"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:layout_scrollFlags="enterAlways">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/logoApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginRight="8dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/iv_logo"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:adjustViewBounds="true"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/jlogo"/>
                    <TextView
                        android:id="@+id/lbAppTitle"
                        android:textColor="#fff"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@string/app_name" />
                    <LinearLayout
                        android:id="@+id/btnSaldoIDR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_appbar"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:gravity="right"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_poin_card"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:maxLines="1"
                            android:layout_marginRight="5dp"
                            android:text="Poin Card"
                            android:gravity="center"
                            />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:layout_gravity="top"
                                android:gravity="top"
                                android:text="Rp. "
                                android:visibility="gone"/>
                            <TextView
                                android:id="@+id/lbIDR"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:maxLines="1"
                                android:text="0,-"
                                android:visibility="gone"/>
                            <TextView
                                android:id="@+id/lbPoinCard"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:maxLines="1"
                                android:text="0"
                                android:visibility="visible"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/lbAppTitleScondary"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:visibility="gone"
                        android:text="@string/app_name" />
                    <TextView
                        android:id="@+id/lbAppSubTitle"
                        android:layout_below="@id/lbAppTitleScondary"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:visibility="gone"
                        android:text="SubTitle" />

                    <LinearLayout
                        android:id="@+id/btnHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical"
                        android:layout_marginRight="10dp"
                        android:paddingTop="0dp"
                        android:paddingBottom="0dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:background="@drawable/button_history"
                        android:visibility="gone"
                        android:gravity="right"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingRight="10dp"
                            android:paddingLeft="10dp"
                            android:text="HISTORY"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textStyle="bold"/>

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <include layout="@layout/content_main" />
</android.support.design.widget.CoordinatorLayout>
