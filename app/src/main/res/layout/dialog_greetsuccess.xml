<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layGreet"
    android:background="@android:color/transparent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_alignParentBottom="true"
        android:id="@+id/item_layout_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="24dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.0"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@android:color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_gravity="left"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/lbGreet"
            android:textColor="#c000"
            android:layout_marginLeft="4dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Greet Success" />
        <android.support.v4.widget.Space
            android:layout_width="16dp"
            android:layout_height="16dp" />
        <TextView
            android:id="@+id/lbInfo"
            android:textColor="#c000"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearance"
            android:text="Lakukan 10 greet agar bisa memperoleh poin card dari iklan, dan akses fitur video" />
    </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
